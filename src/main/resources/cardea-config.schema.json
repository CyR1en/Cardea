{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cardea Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri-reference",
      "description": "Reference to the schema used by tools/editors."
    },
    "kickOnInvalidation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "message": { "type": "string" }
      },
      "required": [
        "enabled",
        "message"
      ]
    },
    "dialog": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "timeout": { "type": "number" },
        "title": { "type": "string" },
        "body": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 0,
          "maxItems": 10
        },
        "inputPrompt": { "type": "string" },
        "buttons": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "submitLabel": { "type": "string" },
            "submitHover": { "type": "string" },
            "cancelLabel": { "type": "string" },
            "cancelHover": { "type": "string" }
          },
          "required": [
            "submitLabel",
            "submitHover",
            "cancelLabel",
            "cancelHover"
          ]
        },
        "loginResult": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "success": { "type": "string" },
            "incorrect": { "type": "string" },
            "cancelled": { "type": "string" },
            "timeout": { "type": "string" }
          },
          "required": [
            "success",
            "incorrect",
            "cancelled",
            "timeout"
          ]
        }
      },
      "required": [
        "title",
        "body",
        "inputPrompt",
        "buttons",
        "loginResult"
      ]
    }
  },
  "required": ["dialog"]
}
